<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Post.PostTypeSelectFragment">

    <Button
        android:id="@+id/btntypeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="220dp"
        android:text="图文"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btntypeAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="108dp"
        android:text="音频"
        app:layout_constraintBottom_toTopOf="@+id/btntypeImage"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btntypeVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="108dp"
        android:text="视频"
        app:layout_constraintBottom_toTopOf="@+id/btntypeAudio"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btntypeDraft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:text="草稿箱"
        app:layout_constraintBottom_toTopOf="@+id/btntypeAudio"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>